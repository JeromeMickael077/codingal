<p id="result"></p>
<script>
function Multiply(X,y) {
  if (y == undefined) {
    y = 1;
  }
  alert ("the value of y is undefined " );
  y= 6;
}
var result = X * y;
document.getElementById("result").innerHTML = "The result is: " + result;