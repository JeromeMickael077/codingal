    <div class="container">
        <section id="data-section">
            <h2>Objects & Arrays</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="box">
                        <h4>Object (Student Info)</h4>
                        <p id="obj-out"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box">
                        <h4>Array (Colors)</h4>
                        <p id="arr-out"></p>
                    </div>
                </div>
            </div>
        </section>

        <section id="logic-section">
            <h2>Functions, Loops & Switch</h2>
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-primary" onclick="runAll(10)">Run All Code</button>
                    <div class="mt-4 box">
                        <p id="math-res"><b>Math Result:</b> </p>
                        <p id="loop-res"><b>For Loop:</b> </p>
                        <p id="switch-res"><b>Switch Case:</b> </p>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script>
        // --- DATA STRUCTURES (Tinu & Riya) ---
        // Objects use Key-Value pairs
        var student = { name: "Riya", age: 8, grade: 3 }; 
        
        // Arrays store lists by index (starting at 0)
        var colors = ["Pink", "Blue", "Green"];
        colors.push("Yellow"); // Method to add item

        // Using document.getElementById() to display data
        document.getElementById("obj-out").innerHTML = "Student: " + student.name + " (Age: " + student.age + ")";
        document.getElementById("arr-out").innerHTML = "First Color: " + colors[0] + " | All: " + colors.join(" - ");


        // --- FUNCTIONS & SCOPE ---
        var globalVal = 2; // Global variable

        function runAll(x, y) {
            // Function Scope: 'y' is a parameter
            if (y === undefined) { y = globalVal; } // Default value logic
            
            // 1. Math Function
            var result = x * y;
            document.getElementById("math-res").innerHTML = "<b>Math Result:</b> " + x + " * " + y + " = " + result;

            // 2. For Loop (Printing a list)
            var fruitList = ["Apple", "Mango", "Banana"];
            var text = "";
            for (var i = 0; i < fruitList.length; i++) {
                text += fruitList[i] + " ";
            }
            document.getElementById("loop-res").innerHTML = "<b>For Loop:</b> " + text;

            // 3. Switch Statement (Decision making)
            var dayMsg;
            switch (new Date().getDay()) {
                case 0: dayMsg = "Sunday"; break;
                case 6: dayMsg = "Saturday"; break;
                default: dayMsg = "a Weekday"; // Fallback
            }
            document.getElementById("switch-res").innerHTML = "<b>Switch Case:</b> Today is " + dayMsg;
        }

        // Call Stack: runAll is pushed onto stack, then sub-functions inside it
    </script>
