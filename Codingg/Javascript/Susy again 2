    <script>
        // --- OBJECTS & ARRAYS ---
        // Objects use "Name-Value" pairs
        var student = { name: "Riya", age: 8, grade: 3 }; 
        
        // Arrays use Index numbers starting from 0
        var fruits = ["Apple", "Mango", "Grapes", "Watermelon"];
        fruits.push("Banana"); // Adds to the end

        // Accessing elements using document.getElementById()
        document.getElementById("obj-display").innerHTML = "Name: " + student.name + "<br>Age: " + student.age;
        document.getElementById("arr-display").innerHTML = "First Fruit: " + fruits[0] + "<br>Total: " + fruits.length;


        // --- FUNCTIONS & SCOPE ---
        var globalVar = 2; // Global variable (can be accessed anywhere)

        function calculate(x, y) {
            // Local variable: scope is only inside this function
            if (y === undefined) { y = globalVar; } 
            var result = x * y;
            document.getElementById("math-out").innerHTML = "Result: " + result;
        }


        // --- LOOPS (For Loop) ---
        var fruitText = "";
        for (var i = 0; i < fruits.length; i++) {
            fruitText += fruits[i] + "<br>";
        }
        document.getElementById("loop-out").innerHTML = fruitText;


        // --- SWITCH STATEMENT (Logic) ---
        var dayName;
        switch (new Date().getDay()) {
            case 0: dayName = "Sunday"; break;
            case 6: dayName = "Saturday"; break;
            default: dayName = "a Weekday";
        }
        document.getElementById("day-out").innerHTML = "Today is " + dayName;

    </script>
