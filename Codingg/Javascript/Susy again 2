        <section id="logic-section">
            <h2>3. JavaScript Logic</h2>
            <div class="row">
                <div class="col-md-4">
                    <h4>Functions & Scope</h4>
                    <button class="btn btn-primary" onclick="calculate(5)">Multiply (5 * 2)</button>
                    <p id="math-out" class="mt-2"></p>
                </div>
                <div class="col-md-4">
                    <h4>For Loop</h4>
                    <div id="loop-out" class="debug-box"></div>
                </div>
                <div class="col-md-4">
                    <h4>Switch Case</h4>
                    <p id="day-out" class="debug-box"></p>
                </div>
            </div>
